extends layout

block style
  link(href="/stylesheets/pages/request.css" rel="stylesheet")

block content
  section.first.p-0.text-white
    +navbar
    .presentation-info
      h1.title Prototyping Request
      p(style="width: 20rem;") Lorem ipsum dolor sit amet, consectetur adipisicing elit. Molestiae, vero.
  section.p-0
    .container(style="height: 100%;")
      .row(style="height: 100%;")
        .col-lg-2.col-md-0
        .col-lg-8.col-md-6.d-flex.flex-column.justify-content-center
          h1 Submit a request
          +flash
          +form("post", "/request/submit")
            .d-flex
              .pe-2.flex-grow-1: +input("name")(placeholder="Name" icon="bi-person")
              .ps-2.flex-grow-1: +input("email")(placeholder="Email" icon="bi-envelope")
            .py-3: +input-textbox("description")
            //.pb-3: +input-file("file")
            .text-end: +form-button("Submit Request", "btn-primary")
        .col-lg-2.col-md-0
