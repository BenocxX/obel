extends layout

block style
  link(href="/stylesheets/pages/home.css" rel="stylesheet")

block content
  section.first.p-0.text-white
    +navbar
    .presentation-info
      h1.title=localize("home.presentationInfo.title")
      p(style="width: 20rem;")=localize("home.presentationInfo.info")
      a(href="/request")
        +button_arrow(localize("home.presentationInfo.button"), "#ffffff", "#1b3375")
  section.p-0
    .container(style="height: 100%;")
      .row(style="height: 100%;")
        .col-lg-2.col-md-0
        .col-lg-8.col-md-6.d-flex.flex-column.justify-content-center
          h1=localize("home.content.title")
          p=localize("home.content.detail")
        .col-lg-2.col-md-0