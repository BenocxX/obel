include mixins/base
include mixins/navbar
include mixins/footer
include mixins/buttons

doctype html
html
  head
    title Obel
    meta(charset="utf-8")
    link(href="/stylesheets/vendor/bootstrap-icons.css" rel="stylesheet")
    link(href="/stylesheets/vendor/bootstrap.css" rel="stylesheet")
    link(href="/stylesheets/vendor/fontawesome.min.css" rel="stylesheet")
    link(href="/stylesheets/style.css" rel="stylesheet")
    block style
    +navbar_dependencies
    +footer_dependencies
    +buttons_dependencies
    script(src="/javascripts/vendor/bootstrap.js")
    script(src="/javascripts/vendor/jquery-3.5.1.min.js")
    block script

  body
    .container.p-0.m-0(style="height: 100vh; max-width: 100vw;")
      if currentRoute !== "/home"
        +navbar
      block content
      +footer